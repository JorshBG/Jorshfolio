---
import {Icon} from "astro-icon";
import {t, changeLanguage} from 'i18next'
---

<div
        class="fixed bottom-0 ml-4 mb-8 rounded-full bg-gradient-to-l from-orange-400 to-amber-200 dark:from-slate-950 dark:to-slate-600 dark:shadow-md dark:shadow-primary p-2 xl:p-1 cursor-pointer"
>
    <div
            class="fixed content-menu w-auto -mt-24 grid-cols-2 grid hidden"
            id="options"
    >
        <div class="menus bg-orange-100 dark:bg-slate-800 p-2 rounded-md flex flex-col gap-2">
            <div class="text-md font-semibold">
                <div
                        class="heading-group flex flex-row"
                        data-menu="theme"
                        data-target="options-theme"
                >
                    <span class="flex-none">{t("config.options.theme")}</span>
                    <Icon name="ic:round-arrow-right" class="flex-none w-6"/>
                </div>
            </div>
            <span class="h-[1px] bg-orange-700 w-full dark:bg-primary"></span>
            <div class="text-md font-semibold">
                <div
                        class="heading-group flex flex-row"
                        data-menu="lang"
                        data-target="options-lang"
                >
                    <span class="flex-none">{t("config.options.language")}</span>
                    <Icon name="ic:round-arrow-right" class="flex-none w-6"/>
                </div>

            </div>
        </div>
        <div class="menus bg-transparent p-1 rounded-md flex-col gap-2 hidden" id="selections">
            <div class="text-md bg-orange-100 dark:bg-slate-800 p-1 rounded-md font-semibold flex-col gap-y-1 hidden" data-option="theme" id="options-theme">
                <span class="toggle-theme hover:bg-orange-400 dark:hover:bg-slate-700 rounded-md px-1" data-change-theme="dark" >{t("config.themes.dark")}</span>
                <span class="toggle-theme hover:bg-orange-400 dark:hover:bg-slate-700 rounded-md px-1" data-change-theme="light" >{t("config.themes.light")}</span>
            </div>
            <div class="text-md bg-orange-100 dark:bg-slate-800 p-1 rounded-md font-semibold flex-col gap-y-1 hidden" data-option="language" id="options-lang">
                <span class="toggle-lang hover:bg-orange-400 dark:hover:bg-slate-700 rounded-md px-1"  data-change-language="es">{t("config.language.es")}</span>
                <span class="toggle-lang hover:bg-orange-400 dark:hover:bg-slate-700 rounded-md px-1"  data-change-language="en">{t("config.language.en")}</span>
            </div>
        </div>

    </div>
    <Icon
            name="fe:gear"
            class="w-10 lg:w-8 dark:text-white text-slate-100"
            data-toggle="toggle-options"
            data-target="#options"
    />
</div>