---
import Icon from "astro-icon";
import { t } from "i18next";

interface Props {
  school: SchoolExperience;
  current: boolean;
}

const { school, current } = Astro.props;
---

<li class="mb-10 ms-6">
  <span
    class="absolute flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full -start-3 ring-8 ring-white dark:ring-gray-900 dark:bg-blue-900"
  >
    <Icon
      name="ic:round-school"
      class="w-4 h-4 text-blue-800 dark:text-blue-300"
    />
  </span>
  <h3
    class="flex items-center mb-1 text-lg font-semibold text-gray-900 dark:text-white"
  >
    {t(school.title_received)}
    {
      current && (
        <span class="bg-blue-100 text-blue-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300 ms-3">
          {t("school.lang.current")}
        </span>
      )
    }
  </h3>
  <h2
    class="flex items-center mb-1 text-base font-semibold text-gray-700 dark:text-gray-300"
  >
    {t(school.school.name)}
  </h2>
  <time
    class="block mb-2 text-sm font-normal leading-none text-gray-500 dark:text-gray-400"
    >{t(school.date)}</time
  >
  <div class="flex flex-row gap-5 items-center">
    <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400">
      {t("school.lang.social")}:
    </p>
    <div class="flex flex-row flex-wrap gap-4">
      <a href={school.school.facebook} class="flex flex-row gap-2">
        <Icon name="simple-icons:facebook" width="25" />
        {school.school.acronym}
      </a>
      <a href={school.school.web_site} class="flex flex-row gap-2">
        <Icon name="mdi:internet" width="25" />
        {school.school.acronym}
      </a>
    </div>
  </div>
</li>
