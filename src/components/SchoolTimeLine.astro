---
import { Icon } from "astro-icon";
import schoolExperience from "../ts/export/school";
import SchoolStep from "./SchoolStep.astro";
---

<div class="card mx-5 mt-5 tab-content hidden" id="education">
  <ol class="relative border-s border-gray-200 dark:border-gray-700">
    {
      schoolExperience.map((school, index) => {
        return <SchoolStep current={index===0} school={school}/>;
      })
    }
  </ol>
</div>
